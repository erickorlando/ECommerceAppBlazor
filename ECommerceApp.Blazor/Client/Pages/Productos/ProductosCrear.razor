@page "/productos/crear"
@using ECommerceApp.Blazor.Shared.Request
@inject HttpClient Http
@inject NavigationManager NavigationManager

<ProductoEdit Request="Request" GuardarCallBack="GrabarNuevoProducto" />

@code {

    public ProductoDtoRequest Request { get; set; }

    private async Task GrabarNuevoProducto()
    {
        // Llamar al API para guardar los datos.
        await Http.PostAsJsonAsync("api/Productos", Request);
        NavigationManager.NavigateTo("/productos/list");
    }

}