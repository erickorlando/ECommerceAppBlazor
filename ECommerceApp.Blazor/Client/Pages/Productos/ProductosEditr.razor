@page "/productos/editar/{Id:int}"
@using ECommerceApp.Blazor.Shared.Request
@inject HttpClient Http
@inject NavigationManager NavigationManager

<ProductoEdit Request="Producto" GuardarCallBack="ActualizarProducto" />

@code {

    [Parameter]
    public int Id { get; set; }

    public ProductoDtoRequest Producto { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var response = await Http.GetFromJsonAsync<ProductoDtoRequest>($"api/Productos/{Id}");
        if (response != null)
            Producto = response;
    }

    private async Task ActualizarProducto()
    {
        await Http.PutAsJsonAsync($"api/Productos/{Id}", Producto);
        NavigationManager.NavigateTo("/productos/list");
    }

}
